<%- include('partials/header') %>
<h2 class="text-heading">Sign up</h2>
<div class="auth-container container">
    <div class="auth-board row">
        <div class="col auth-form-col">
            <form action="/users/signup" method="POST">
                <div class="form-group">
                  <label for="exampleInputEmail1">Username</label>
                  <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username">
                  <small id="emailHelp" class="form-text text-muted">Keep it unique.</small>
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
        <div class="col auth-img-col">
            <img class="img-fluid" src="/images/signup-image.jpg">
        </div>
    </div>
</div>


<%- include('partials/footer') %>